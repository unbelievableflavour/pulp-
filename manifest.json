{
  "manifest_version": 3,

  "name": "Pulp+",
  "description": "This extension will extend Pulp with some extra features!",
  "version": "0.2.4",
  "content_scripts": [{
    "matches": ["https://play.date/pulp/**/edit/*"],
    "js": ["/js/scriptInjector.js"]
  }],
  "web_accessible_resources" : [{
    "resources": [
      "/js/injectedScript.js",
      "/js/modules/biggerSearchResults.js",
      "/js/modules/customTheme.js",
      "/js/modules/openScriptButton.js",
      "/js/modules/prettyPrintExportButtons.js",
      "/js/modules/removeFooter.js",
      "/js/modules/responsiveScriptView.js",
      "/js/modules/screenshot.js",
      "/js/modules/scriptSelectPlayerPriority.js",
      "/js/modules/tilesForBigScreen.js"
    ],
    "matches": ["<all_urls>"]
  }],
  "permissions": [
    "storage"
  ]
}